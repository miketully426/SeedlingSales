@model SeedlingSales.ViewModels.IndexViewModel

<h1>Current Stock</h1>
@if (Model.Plants.Count == 0)
{
    <p>No Plants Yet</p>
}
<table>
@foreach(var plant in Model.Plants)
    {
        @if (plant.Ready > 0 || plant.Seeded > 0)
        {
        <tr>
            <td>@plant.Name</td>
            <td>@plant.Seeded</td>
            <td>@plant.Ready</td>
            <td>@plant.Price</td>
            <td><form asp-action="Remove" method="post">
                <input type="hidden" name="plantid" value="@plant.PlantID" />
                <input type="submit" value="remove" />
                </form></td>
        </tr>
            }

        }
    </table>



<p><a asp-controller="Home" asp-action="Add">Add Plant</a></p>
